<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox stylesheets="@../styles/home.css" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.aviato.Controllers.Home_ctlr">
    <!-- Split the layout into two parts: Left and Right -->
    <HBox fx:id="mainHBox" spacing="10" style="-fx-padding: 20;" HBox.hgrow="ALWAYS">
        <!-- Left part with a label (Dashboard) -->
        <VBox fx:id="leftPane" maxWidth="300" minWidth="150" prefWidth="200" spacing="10" HBox.hgrow="NEVER">
            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Dashboard" />
        </VBox>

        <!-- Right part with a calendar and table -->
        <VBox fx:id="rightPane" minWidth="400" prefWidth="600" spacing="10" HBox.hgrow="ALWAYS">
            <!-- Upper part with a calendar -->
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Upcoming Services" />
            <DatePicker fx:id="datePicker" style="-fx-pref-width: 100%;" VBox.vgrow="NEVER" />

            <!-- Lower part with today's appointments table -->
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Today's Appointments" />
            <TableView fx:id="appointmentsTable" style="-fx-pref-width: 100%;" VBox.vgrow="NEVER">
                <columns>
                    <TableColumn fx:id="timeColumn" maxWidth="150" minWidth="80" prefWidth="100" text="Time" />
                    <TableColumn fx:id="serviceColumn" minWidth="150" prefWidth="275.9999771118164" text="Service" />
                    <TableColumn fx:id="clientColumn" minWidth="150" prefWidth="223.99996948242188" text="Client" />
                </columns>
            </TableView>
        </VBox>
    </HBox>
</VBox>
