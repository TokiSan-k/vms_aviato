<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox stylesheets="@../styles/Sales.css" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.aviato.Controllers.Admin_Cltr">
    <children>
        <HBox VBox.vgrow="ALWAYS">
            <children>
                <!-- Sidebar Menu -->
                <VBox maxWidth="252.0" minWidth="252.0" spacing="20.0" styleClass="sidebar">
                    <padding>
                        <Insets top="20.0" />
                    </padding>
                    <children>
                        <Button fx:id="customersButton" mnemonicParsing="false" onAction="#handleCustomers"
                                prefHeight="45.0" prefWidth="168.0" text="Customers" styleClass="sidebar-button">
                            <VBox.margin>
                                <Insets left="40.0" top="35.0" />
                            </VBox.margin>
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Button>
                        <Button fx:id="appointmentsButton" mnemonicParsing="false" onAction="#handleAppointments"
                                prefHeight="45.0" prefWidth="168.0" text="Appointments" styleClass="sidebar-button">
                            <VBox.margin>
                                <Insets left="40.0" />
                            </VBox.margin>
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Button>
                        <Button fx:id="vehiclesButton" mnemonicParsing="false" onAction="#handleVehicles"
                                prefHeight="45.0" prefWidth="168.0" text="Vehicles" styleClass="sidebar-button">
                            <VBox.margin>
                                <Insets left="40.0" />
                            </VBox.margin>
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Button>
                        <Button fx:id="paymentsButton" mnemonicParsing="false" onAction="#handlePayments"
                                prefHeight="45.0" prefWidth="168.0" text="Payments" styleClass="sidebar-button">
                            <VBox.margin>
                                <Insets left="40.0" />
                            </VBox.margin>
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Button>
                    </children>
                </VBox>
                <!-- Main Container -->
                <VBox fx:id="mainContainer" HBox.hgrow="ALWAYS">
                    <children>
                        <HBox HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                            <children>
                                <!-- Middle Section -->
                                <VBox minWidth="341.0" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                                    <children>
                                        <!-- Pending Services Pie Chart -->
                                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Pending Services" />
                                        <PieChart fx:id="pendingServicesChart" minHeight="100.0" VBox.vgrow="ALWAYS" />
                                        <!-- Today's Appointments Table -->
                                        <VBox minHeight="207.0" VBox.vgrow="ALWAYS">
                                            <children>
                                                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Today's Appointment" />
                                                <TableView fx:id="appointmentsTable" VBox.vgrow="ALWAYS">
                                                    <columns>
                                                        <TableColumn fx:id="detailsColumn" prefWidth="232.0" text="Details" />
                                                        <TableColumn fx:id="timeColumn" prefWidth="105.6" text="Time" />
                                                    </columns>
                                                </TableView>
                                            </children>
                                        </VBox>
                                        <!-- Quick Actions Section -->
                                        <VBox minHeight="221.0" spacing="10.0" VBox.vgrow="ALWAYS">
                                            <children>
                                                <Text text="Quick Actions" wrappingWidth="103.908935546875" styleClass="section-title">
                                                    <VBox.margin>
                                                        <Insets left="120.0" />
                                                    </VBox.margin>
                                                    <font>
                                                        <Font name="System Bold Italic" size="15.0" />
                                                    </font>
                                                </Text>
                                                <!-- First Row of Buttons -->
                                                <HBox alignment="CENTER" spacing="20.0">
                                                    <children>
                                                        <Button fx:id="newAppointmentButton" mnemonicParsing="false"
                                                                onAction="#handleNewAppointment" prefHeight="38.0" prefWidth="118.0"
                                                                text="New Appointment" styleClass="action-button">
                                                            <font>
                                                                <Font name="System Bold" size="11.0" />
                                                            </font>
                                                        </Button>
                                                        <Button fx:id="customerSearchButton" mnemonicParsing="false"
                                                                onAction="#handleCustomerSearch" prefHeight="38.0" prefWidth="118.0"
                                                                text="Customer Search" styleClass="action-button">
                                                            <font>
                                                                <Font name="System Bold" size="11.0" />
                                                            </font>
                                                        </Button>
                                                    </children>
                                                    <HBox.margin>
                                                        <Insets top="20.0" />
                                                    </HBox.margin>
                                                    <VBox.margin>
                                                        <Insets top="20.0" />
                                                    </VBox.margin>
                                                </HBox>
                                                <!-- Second Row of Buttons -->
                                                <HBox alignment="CENTER" spacing="20.0">
                                                    <children>
                                                        <Button fx:id="registerVehicleButton" mnemonicParsing="false"
                                                                onAction="#handleRegisterVehicle" prefHeight="38.0" prefWidth="118.0"
                                                                text="Register Vehicle" styleClass="action-button">
                                                            <font>
                                                                <Font name="System Bold" size="11.0" />
                                                            </font>
                                                        </Button>
                                                        <Button fx:id="processPaymentButton" mnemonicParsing="false"
                                                                onAction="#handleProcessPayment" prefHeight="38.0" prefWidth="118.0"
                                                                text="Process Payment" styleClass="action-button">
                                                            <font>
                                                                <Font name="System Bold" size="11.0" />
                                                            </font>
                                                        </Button>
                                                    </children>
                                                    <HBox.margin>
                                                        <Insets top="10.0" />
                                                    </HBox.margin>
                                                    <VBox.margin>
                                                        <Insets top="20.0" />
                                                    </VBox.margin>
                                                </HBox>
                                            </children>
                                        </VBox>
                                        <!-- New Bottom VBox -->
                                        <VBox fx:id="middleBottomVBox" minHeight="20.0" styleClass="bottom-section" />
                                    </children>
                                </VBox>
                                <!-- Right Section -->
                                <VBox minWidth="279.0" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                                    <children>
                                        <!-- Placeholder -->
                                        <VBox minHeight="100.0" prefHeight="181.0" prefWidth="279.0" VBox.vgrow="ALWAYS" />
                                        <!-- Inventory Alerts Table -->
                                        <VBox minHeight="329.0" VBox.vgrow="ALWAYS">
                                            <children>
                                                <Text text="Inventory Alerts" wrappingWidth="86.93676567077637" styleClass="section-title">
                                                    <VBox.margin>
                                                        <Insets left="90.0" top="10.0" />
                                                    </VBox.margin>
                                                </Text>
                                                <TableView fx:id="inventoryTable" VBox.vgrow="ALWAYS">
                                                    <columns>
                                                        <TableColumn fx:id="c1Column" prefWidth="191.2" text="Item" />
                                                        <TableColumn fx:id="c2Column" prefWidth="84.0" text="Status" />
                                                    </columns>
                                                </TableView>
                                            </children>
                                        </VBox>
                                        <!-- New Bottom VBox -->
                                        <VBox fx:id="rightBottomVBox" minHeight="20.0" styleClass="bottom-section" />
                                    </children>
                                </VBox>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</VBox>