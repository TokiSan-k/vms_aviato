                                                            <Button fx:id="av_verifyCustIdButton" mnemonicParsing="false" styleClass="addFieldButton" onAction="#verifyCustomerId" text="Verify">
                                                                <HBox.margin>
                                                                    <Insets left="5.0" />
                                                                </HBox.margin>
                                                            </Button>
                                                            <Text fx:id="verifyStatus" visible="false" managed="false" text="Customer ID does not exists!" />
                                                        </HBox>
                                                        <HBox alignment="CENTER_LEFT" styleClass="addLicencePlateField">
                                                            <Text text="Licence Plate:" />
                                                            <TextField fx:id="av_LicencePlateField" editable="false" disable="true" styleClass="addLicencePlateInputField" />
                                                        </HBox>
                                                        <HBox alignment="CENTER_LEFT" styleClass="addMakeField">
                                                            <Text text="Make:" />
                                                            <TextField fx:id="av_MakeField" editable="false" disable="true" styleClass="addMakeInputField" />
