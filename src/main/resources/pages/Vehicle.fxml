                                                                            <Insets left="5.0" />
                                                                        </HBox.margin>
                                                                    </Button>
                                                                </HBox>
                                                                <HBox alignment="CENTER_LEFT" styleClass="modVehicleMake">
                                                                    <Text text="Make:" />
                                                                    <TextField fx:id="mv_MakeField" editable="false" disable="true" />
                                                                    <Button fx:id="mc_editMakeButton" mnemonicParsing="false" styleClass="modVehicleButtons" onAction="#editMake" text="C">
